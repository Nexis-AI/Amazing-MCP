# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys
MEM0_API_KEY=your_mem0_api_key_here
EXA_API_KEY=your_exa_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
BITQUERY_API_KEY=your_bitquery_api_key_here
CRYPTONEWS_API_KEY=your_cryptonews_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Web3 Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_key
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-rpc.com/
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_CHECK_PERIOD=600

# DeFi Protocol Keys
UNISWAP_API_KEY=your_uniswap_api_key_here
AAVE_API_KEY=your_aave_api_key_here

# External Service URLs
OCEAN_PROTOCOL_URL=https://v4.mainnet.oceanprotocol.com
LAYERZERO_API_URL=https://api.layerzero.network

# Feature Flags
ENABLE_MEMORY_SYSTEM=true
ENABLE_EMOTION_SYSTEM=true
ENABLE_REAL_TIME_PRICES=true
ENABLE_DEFI_INTEGRATIONS=true
ENABLE_NFT_SUPPORT=true
ENABLE_CROSS_CHAIN=true